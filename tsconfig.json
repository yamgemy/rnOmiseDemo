{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "esnext",
    "module": "es2015",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-native",
    "baseUrl": "./",
    "paths": {
      "@constants": [
        "./src/constants/index.ts"
      ],
      "@constants/*": [
        "./src/constants/*"
      ],
      "@screens": [
        "./src/screens/index.ts"
      ],
      "@screens/*": [
        "./src/screens/*"
      ],
      "@navigators": [
        "./src/navigators/index.ts"
      ],
      "@navigators/*": [
        "./src/navigators/*"
      ],
      "@animations": [
        "./src/animations/index.ts"
      ],
      "@animations/*": [
        "./src/animations/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@components": [
        "./src/components/index.ts"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@utils": [
        "./src/utils/index.ts"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@hooks": [
        "./src/hooks/index.ts"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@store": [
        "./src/store/index.ts"
      ],
      "@store/*": [
        "./src/store/*"
      ],
      "@selectors": [
        "src/selectors/index.ts"
      ],
      "@selectors/*": [
        "src/selectors/*"
      ],
    },
  },
  "include": [
    "src/**/*",
    "tsconfig.json",
    "App.js"
  ],
  "types": [
    "react",
    "react-native",
    "jest"
  ],
  "exclude": [
    "build",
    "node_modules",
  ],
}